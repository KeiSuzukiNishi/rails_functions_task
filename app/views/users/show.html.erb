<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Profile Image:</strong>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image.variant(resize_to_limit: [100, 100]) %>
  <% else %>
    <p>画像なし</p>
  <% end %>
</p>

<%= link_to "Edit", edit_user_path(@user) %>